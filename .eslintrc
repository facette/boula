{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "root": true,
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "arrow-spacing": [
      "error",
      {
        "after": true,
        "before": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "curly": [
      "error",
      "all"
    ],
    "indent": [
      "error",
      4,
      {
        "flatTernaryExpressions": true
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": ["error", "warn"]
      }
    ],
    "no-fallthrough": [
      "error"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ]
  }
}
